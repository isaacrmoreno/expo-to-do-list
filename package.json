{
	"name": "expo-to-do-list",
	"private": true,
	"main": "index.js",
	"scripts": {
		"start": "cd apps/mobile && npx expo start",
		"test": "jest",
		"clean": "rm -rf node_modules && cd apps/* && rm -rf node_modules && yarn",
		"update": "eas update",
		"build": "cd apps/mobile && eas build",
		"build:staging:ios": "yarn build --profile staging -p ios",
		"build:staging:android": "yarn build --profile staging -p android",
		"build:beta:ios": "yarn build --profile beta -p ios",
		"build:beta:android": "yarn build --profile beta -p android",
		"build:prod:ios": "yarn build --profile production -p ios",
		"build:prod:android": "yarn build --profile production -p android",
		"submit:android": "cd apps/mobile && eas submit -p android --latest",
		"submit:ios": "cd apps/mobile && eas submit -p ios --latest"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/isaacrmoreno/expo-to-do-list.git"
	},
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/isaacrmoreno/expo-to-do-list/issues"
	}
}
